#include "stdafx.h"
#include <iostream>

using namespace std;

int main()
{
	int n;
	int suma=0;
	int aux;
	cout<<"Ingrese el numero"<<endl; //3232
	cin>>n;
	
	
	while(n>0) //3232
	{	aux=n;    //3232
		aux==aux%10; //2
		if(aux%2==0) //si
		{
			suma=suma+n%10; //0+2
		}
		n=n/10;  //323
	
	
	}
	cout<<"La suma de digitos es:"<<suma;

system("pause>null");
return 0 ;
}

